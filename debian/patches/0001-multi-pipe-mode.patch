 }
 
+void
+session_prompt_respond (Session *session, struct pam_response *response)
+{
+    g_return_if_fail (session != NULL);
+
+    int error = PAM_SUCCESS;
+    write_prompt_data (session, &error, sizeof (error));
+    for (int i = 0; i < session->priv->prompt_messages_length; i++)
+    {
+        write_prompt_string (session, response[i].resp);
+        write_prompt_data (session, &response[i].resp_retcode, sizeof (response[i].resp_retcode));
+    }
+
+    // clear
+    if (session->priv->messages == session->priv->prompt_messages) {
+        session->priv->messages = NULL;
+        session->priv->messages_length = 0;
+    }
+
+    /* Delete the old messages */
+    for (int i = 0; i < session->priv->prompt_messages_length; i++)
+        g_free ((char *) session->priv->prompt_messages[i].msg);
+    g_free (session->priv->prompt_messages);
+    session->priv->prompt_messages = NULL;
+    session->priv->prompt_messages_length = 0;
+}
+
